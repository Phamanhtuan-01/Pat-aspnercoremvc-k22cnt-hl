@model PatDay05Model.Models.PatMember

@{
    ViewData["Title"] = "Xóa thành viên";
}

<h2 class="text-center text-danger my-4">@ViewData["Title"]</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-danger text-white fw-bold text-center">
                ⚠️ Bạn có chắc chắn muốn xóa thành viên này?
            </div>
            <div class="card-body">
                <table class="table table-bordered mb-0">
                    <tr>
                        <th style="width:30%">@Html.DisplayNameFor(m => m.MemberId)</th>
                        <td>@Html.DisplayFor(m => m.MemberId)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.UserName)</th>
                        <td>@Html.DisplayFor(m => m.UserName)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.FullName)</th>
                        <td>@Html.DisplayFor(m => m.FullName)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Password)</th>
                        <td>@Html.DisplayFor(m => m.Password)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Email)</th>
                        <td>@Html.DisplayFor(m => m.Email)</td>
                    </tr>
                </table>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary px-4">← Quay lại</a>
                <form asp-action="PatDelete" method="post" class="m-0">
                    <input type="hidden" asp-for="MemberId" />
                    <button type="submit" class="btn btn-danger px-4">🗑️ Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>
