@{
    ViewData["Title"] = "Danh sách";
    var members = Model as List<PatDay05Model.Models.PatMember>;
    var stt = 1;
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">@ViewData["Title"]</h4>
        </div>
        <div class="card-body p-4">
            <table class="table table-striped table-hover table-bordered align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Member Id</th>
                        <th scope="col">Full Name</th>
                        <th scope="col">User Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in members)
                    {
                        <tr>
                            <td>@stt</td>
                            <td>@item.MemberId</td>
                            <td>@item.FullName</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>
                                <a asp-action="PatDetails" asp-route-id="@item.MemberId"
                                   class="btn btn-sm btn-info me-1">
                                    <i class="bi bi-eye"></i> Xem
                                </a>
                                <a asp-action="PatEdit" asp-route-id="@item.MemberId"
                                   class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil-square"></i> Sửa
                                </a>
                                <a asp-action="PatDelete" asp-route-id="@item.MemberId"
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Bạn có chắc chắn muốn xóa thành viên này?');">
                                    <i class="bi bi-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                        stt++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
