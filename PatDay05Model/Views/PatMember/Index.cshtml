@model IEnumerable<PatDay05Model.Models.PatMember>

@{
    ViewData["Title"] = "Thành viên";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@ViewData["Title"]</h4>
            <a asp-action="PatCreate" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle"></i> Thêm mới
            </a>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover table-bordered align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.MemberId)</th>
                        <th>@Html.DisplayNameFor(model => model.UserName)</th>
                        <th>@Html.DisplayNameFor(model => model.FullName)</th>
                        <th>@Html.DisplayNameFor(model => model.Password)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.MemberId)</td>
                            <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Password)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>
                                <a asp-action="PatEdit" asp-route-id="@item.MemberId"
                                   class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil-square"></i> Sửa
                                </a>
                                <a asp-action="PatDetails" asp-route-id="@item.MemberId"
                                   class="btn btn-sm btn-info me-1">
                                    <i class="bi bi-eye"></i> Xem
                                </a>
                                <a asp-action="PatDelete" asp-route-id="@item.MemberId"
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Bạn có chắc chắn muốn xóa thành viên này?');">
                                    <i class="bi bi-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
