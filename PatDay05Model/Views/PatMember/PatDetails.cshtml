@model PatDay05Model.Models.PatMember

@{
    ViewData["Title"] = "Thông tin chi tiết thành viên";
}

<h2 class="text-center my-4">@ViewData["Title"]</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-info text-white fw-bold text-center">
                Thông tin thành viên
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered mb-0">
                    <tr>
                        <th style="width: 30%">@Html.DisplayNameFor(m => m.MemberId)</th>
                        <td>@Html.DisplayFor(m => m.MemberId)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.UserName)</th>
                        <td>@Html.DisplayFor(m => m.UserName)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.FullName)</th>
                        <td>@Html.DisplayFor(m => m.FullName)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Password)</th>
                        <td>@Html.DisplayFor(m => m.Password)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Email)</th>
                        <td>@Html.DisplayFor(m => m.Email)</td>
                    </tr>
                </table>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary px-4">← Quay lại</a>
                <a asp-action="PatEdit" asp-route-id="@Model.MemberId" class="btn btn-warning px-4">✏️ Sửa</a>
            </div>
        </div>
    </div>
</div>
